@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero-section {
        text-align: center;
        padding: 4rem 0;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.05) 0%, rgba(124, 58, 237, 0.05) 100%);
        border-radius: 16px;
        margin-bottom: 3rem;
    }

    .hero-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 2rem;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border-radius: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        color: white;
        box-shadow: 0 20px 40px rgba(79, 70, 229, 0.3);
    }

    .hero-section h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1rem;
    }

    .hero-section .welcome-text {
        font-size: 1.8rem;
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .hero-section p {
        font-size: 1.1rem;
        color: #6B7280;
        max-width: 600px;
        margin: 0 auto;
    }

    .features-section {
        margin-top: 3rem;
    }

    .feature-card {
        text-align: center;
        padding: 2rem;
        height: 100%;
        transition: all 0.3s ease;
        border-radius: 12px;
        background: white;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
    }

    .feature-card h3 {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 1rem;
    }

    .feature-card p {
        color: #6B7280;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .btn-action {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border: none;
        padding: 0.75rem 2rem;
        font-weight: 600;
        border-radius: 8px;
        color: white;
        text-decoration: none;
        display: inline-block;
        margin-top: 1rem;
        transition: all 0.3s ease;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
            color: white;
        }

    .card-link {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
    }

        .card-link:hover {
            text-decoration: none;
            color: inherit;
        }

        .card-link .feature-card {
            cursor: pointer;
        }
</style>

<div class="hero-section">
    <div class="hero-icon">
        <i class="bi bi-emoji-smile"></i>
    </div>
    <h1>Welcome to Entishar</h1>
    <p class="welcome-text">Hello, @ViewBag.Username! 👋</p>
    <p>Manage your users efficiently with our modern and intuitive interface.</p>
    <a asp-controller="Users" asp-action="Index" class="btn-action">
        <i class="bi bi-people"></i> Go to Users
    </a>
</div>

<div class="features-section">
    <div class="row g-4 justify-content-center">
        <div class="col-md-5 col-lg-4">
            <a asp-controller="Users" asp-action="Create" class="card-link">
                <div class="card feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <h3>Create Users</h3>
                    <p>Add new users to your system with easy-to-use forms and validation.</p>
                </div>
            </a>
        </div>

        <div class="col-md-5 col-lg-4">
            <a asp-controller="Users" asp-action="Index" class="card-link">
                <div class="card feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <h3>Manage Users</h3>
                    <p>View, update and manage user information and their active status effortlessly.</p>
                </div>
            </a>
        </div>
    </div>
</div>
